{
  "Xperience Validation Rule - C#": {
    "prefix": ["xpc-validation-rule"],
    "description": "An Xperience by Kentico Validation Rule (C#)",
    "isFileTemplate": true,
    "body": [
      "using Kentico.Xperience.Admin.Base.Forms;",
      "using Kentico.Xperience.Admin.Base.FormAnnotations;",
      "using ${1:MySite.Components.Validation};",
      "",
      "",
      "[assembly: RegisterFormValidationRule(",
      "    identifier: ${TM_FILENAME_BASE}.IDENTIFIER,",
      "    ruleType: typeof(${TM_FILENAME_BASE}),",
      "    name: \"${TM_FILENAME_BASE/([a-zA-Z])(?=[A-Z])/${1} /g}\",",
      "    description: \"A ${TM_FILENAME_BASE/([a-zA-Z])(?=[A-Z])/${1} /g}.\")]",
      "",
      "namespace ${1};",
      "",
      "[ValidationRuleAttribute(typeof(${TM_FILENAME_BASE}Attribute))]",
      "public class ${TM_FILENAME_BASE} : ValidationRule<${TM_FILENAME_BASE}Properties, ${TM_FILENAME_BASE}ClientProperties, ${2:DataType}>",
      "{",
      "    public const string IDENTIFIER = \"${1/[\\.]/-/g}.${TM_FILENAME_BASE/([a-zA-Z])(?=[A-Z])/${1}-/g}\";",
      "",
      "    public override string ClientRuleName => \"@${1/[\\.]/\//g}/${TM_FILENAME_BASE}}\";",
      "",
      "    public ${TM_FILENAME_BASE}() { }",
      "",
      "    public override Task<ValidationResult> Validate(${2} value, IFormFieldValueProvider formFieldValueProvider)",
      "    {",
      "        if (true)",
      "        {",
      "            return ValidationResult.FailResult(\"Please enter a valid value.\")",
      "        }",
      "",
      "        return ValidationResult.SuccessResult();",
      "    }",
      "",
      "    protected override Task ConfigureClientProperties(${TM_FILENAME_BASE}ClientProperties clientProperties)",
      "    {",
      "        return base.ConfigureClientProperties(clientProperties);",
      "    }",
      "}",
      "",
      "public class ${TM_FILENAME_BASE}Properties : ValidationRuleProperties",
      "{",
      "    [NumberInputComponent(",
      "        Label = \"Value\",",
      "        ExplanationText = \"A value to validate against\",",
      "        Tooltip = \"Enter a value\",",
      "        Order = 1)]",
      "    public ${2} Value { get; set; }",
      "}",
      "",
      "public class ${TM_FILENAME_BASE}ClientProperties : ValidationRuleClientProperties",
      "{",
      "    public ${2} Value { get; set; }",
      "}",
      "",
      "public class ${TM_FILENAME_BASE}Attribute : ValidationRuleAttribute",
      "{",
      "    public ${TM_FILENAME_BASE}Attribute(string value)",
      "    {",
      "        Value = value;",
      "    }",
      "",
      "    public ${2} Value { get; set; }",
      "}",
      ""
    ]
  }
}
